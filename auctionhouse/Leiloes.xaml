                                    <TextBlock FontSize="15" >Tempo restante: 1 dia, 2 horas</TextBlock>
                                </StackPanel>
                                <Button Width="Auto" Height="50" FontSize="30" Background="#FF2196F3" Foreground="White" Click="Inspect_Button_Click">Inspecionar</Button>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="150" Margin="0 0 0 20">
                                <materialDesign:PackIcon Kind="Image" Width="150" Height="150" Margin="0 0 60 0"/>
                                <StackPanel VerticalAlignment="Center" Margin="0 0 60 0">
                                    <TextBlock FontSize="15" >Nome 1</TextBlock>
                                    <TextBlock FontSize="15" >Descrição com algum texto</TextBlock>
